---
import { type ProjectSchema } from "../content/config";
import BaseLayout from "./BaseLayout.astro";

export interface Props extends ProjectSchema {}

const { title, description, heroImage, badge, projectLink } = Astro.props;
import { Image } from "astro:assets";
---

<BaseLayout title={title} description={description} image={heroImage}>
  <main class="md:flex md:justify-center">
    <article class="prose prose-lg max-w-[750px] prose-img:mx-auto">
      {heroImage && <img class="w-full h-[200px] sm:h-[400px] object-cover rounded-md" src={heroImage} alt={`${title}`} loading="eager" />}
      <h1 class="title my-2 text-4xl font-bold">{title}</h1>
      {projectLink && <p><a class="underline underline-offset-4 card-title" href={projectLink}>View the project</a></p>}
      <br />
      <div class="divider my-2"></div>
      <slot />
    </article>
  </main>
</BaseLayout>
