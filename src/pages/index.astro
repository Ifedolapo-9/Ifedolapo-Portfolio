---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Ifedolapo Ojo</div>
    <div class="text-3xl py-3 font-bold">Technical Writer</div>
    <div class="py-2">
      <text class="text-lg">
        I am a technical writer with <b>2 years of experience</b>, well-versed in Python, and very passionate about API documentation.
        Also, I love to simplify technical concepts via writing engaging content. 
        As a progrmmer, I have experienced firsthand thee frustation that an incomprehensive API can give to developers. 
        Thus, propelling me to document content in a user-friendly and comprehensive way using tools like Swagger, Postman, 
        Stoplight in conjumction with collaborative tools like Jira for task management.
        During my free time, I write on Medium and freelance as a Technical Writer on Fiverr and Upwork.
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://www.linkedin.com/in/ifedolapo-ojo-a1a3691b9" target="_blank"> Let's connect!</a>
      <a class="btn" href="./ifedolapo-ojo-resume.pdf" download>My Resume</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My Work</div>
  </div>

  <HorizontalCard
    title="Relogic API Documentation"
    img="/relogic.jpg"
    desc="API documentation using Postman for critical API endpoints related to Relay state management"
    url="https://relogicapi.avlinkpro.com/"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Bauteilsortiment API (BTS)"
    img="/bts.jpg"
    desc="Tested endpoints for functionality on Swagger and Django after being added to the backend server powering the site."
    url="https://github.com/nomike/Bauteilsortiment"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Webscraping Project Using Python"
    img="/web-scraping.jpg"
    desc="A python script to retrieve data on the web."
    url="https://github.com/Ifedolapo-9/Automating-Getting-a-List-of-Events-from-Python-s-Website-Using-Selenium"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
